<% include ../partials/header%>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome To YelpCamp!</h1>
        <p>These are our hand picked sites</p>
        <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new">Submit a new site</a>
        </p>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <p>Our most popular sites</p>
        </div>
    </div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap">
     <% camp.forEach(function(val){ %>
        <div class="col-md-3 col-sm-6">
             <div class="img-thumbnail">
                <img src="<%= val.image %>" style="width:100%; height:100%">
                <div class="caption">
                    <h4> <%= val.name %> </h4>
                </div>
                <p>
                    <a href="/campgrounds/<%= val._id %>" class="btn btn-primary">Show More</a>
                </p>
            </div>
            
        </div>
    <% }); %>
    </div>
</div>


<% include ../partials/footer%>