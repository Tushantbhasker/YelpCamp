
<% include ../partials/header%>

<div class="container">
    <div class="row"></div>
        <h1 style="text-align: center">Edit <%= campground.name %></h1>
        <div style="width:30%; margin:0 auto;">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                    <input type="text" class="form-control" value="<%= campground.name %>" name="camp[name]">
            </div>
            <div class="form-group">
                    <input type="text" class="form-control"  value="<%= campground.image %>" name="camp[url]">
            </div>
            <div class="form-group">
                    <input type="text" class="form-control"  value="<%= campground.descpriction %>" name="camp[desc]">
            </div>
            <div class="form-group">
            <button class="btn btn-large btn-default btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
        </div>
       
    </div>
</div>
