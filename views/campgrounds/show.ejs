<% include ../partials/header%>
<div class="container">
    <div class="row">
        <div class="col-mid-3">
            <p class="lead">Yelpl Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Camp1 nklnlknl</li>
                <li class="list-group-item">Camp2</li>
                <li class="list-group-item">Camp3</li>

            </div>

        </div>
        <div class="col-mid-9">
            <div class="img-thumbnail">
                    <img class="img-fluid" src="<%= camp.image %>" >
                    <div class="caption-full">
                        <h4 class="pull-right">$9.00/night</h4>
                        <h4><a href=""><%= camp.name %></a></h4>
                        <p><%= camp.descpriction %></p>
                        <p>Submitted By <%= camp.author.username %></p>
                        <% if(currentUser && camp.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-warning" href="/campgrounds/<%=camp._id %>/edit">Edit</a>
                        <form style="display:inline" action="/campgrounds/<%= camp.id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                        <% } %>

                    </div>
                    
            </div>
            <div class="card card-block bg-faded">
                <div class="text-right"></div>
                <a class="btn btn-success" href="/campgrounds/<%=camp.id%>/comments/new">Add Comment</a>
                
                <% camp.comments.forEach(function(comment){ %>
                    <p>
                        <%=comment.author.username%> - <%=comment.text%>
                    </p>
                
                <%})%>
            </div>

        </div>

    </div>

</div>




<% include ../partials/footer%>